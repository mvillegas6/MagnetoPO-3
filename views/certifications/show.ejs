<% layout('layout/boilerplate') %> <%- include('../templates/navbar') %>
<link rel="stylesheet" href="/styles/show.css" />
<script
  src="https://kit.fontawesome.com/d1023b5858.js"
  crossorigin="anonymous"></script>

<main class="mainContainer">
  <section class="leftContainer"></section>

  <section class="certificationContainer">
    <form action="" class="serachBar">
      <input
        class="searchInput"
        placeholder="Buscar cursos"
        type="text"
        name="q" />
      <button type="submit" class="btn form-control btn-primary">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
    <div class="certifications">
      <% for (let certification of certifications) {%>
      <a href="/certifications/<%= certification.id %>">
        <div class="certification">
          <div class="info">
            <div class="imgContainer">
              <img
                class="img-fluid certificationImage"
                src="<%= certification.image %>"
                alt="" />
            </div>
            <div class="infoContainer">
              <h4><%= certification.name %></h4>
              <p><%= certification.description %></p>
            </div>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </section>
</main>
